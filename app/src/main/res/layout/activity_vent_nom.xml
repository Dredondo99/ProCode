<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0384F4"
    tools:context=".VentNom">

    <TextView
        android:id="@+id/textView"
        android:layout_width="354dp"
        android:layout_height="93dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Escribe el nombre de tu aplicación."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nomIntro"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Escribe aquí"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TableLayout
        android:layout_width="383dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomIntro">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/homeVentNom"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:onClick="moviNombre"
                app:srcCompat="@drawable/home" />

            <Button
                android:id="@+id/button13"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/comenNom"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="moviNombre"
                android:text="COMENZAR" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>